- created_at = @timezone ? @timezone.adjust(blog_item_data.created_at) : blog_item_data.created_at
- updated_at = @timezone ? @timezone.adjust(blog_item_data.updated_at) : blog_item_data.updated_at

- if blog_item_data.has_icon?
  %p.icon= image_tag(blog_item_data.icon.public_filename)

%p.title= blog_item_data.title
%p.posted-at= "#{time_format(created_at)} (#{time_format(updated_at)})"
%p.body= preserve_breaks(blog_item_data.body)