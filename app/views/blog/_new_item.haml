.two-cols
  .col-right
    = render :partial => 'icon', :collection => @icons
  .col-left
    %h2 New blog entry
    
    = error_messages_for :blog_item
    
    - form_remote_for(:blog_item, :url => {:action => :create_item}) do |i|
      %p= hidden_field :blog_item, :user_id
      %p= hidden_field :blog_item, :icon_id
      %p
        = i.label :title
        %br/
        = i.text_field :title 
      %p
        = i.label :body
        %br/
        = find_and_preserve i.text_area :body
      %p
        = i.check_box :public, :checked => true
        = i.label :public
      %p
        = i.check_box :active, :checked => true
        = i.label :active
      %p 
        = submit_tag 'Create'
        %input{:type => 'button', :value => 'Cancel', :onclick => 'onCancelAddBlogItem()'}
  %br.clear
